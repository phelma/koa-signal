{
  "levels": {
    "success": {
      "badge": "✔",
      "labelColor": [ "bgGreen", "black" ],
      "format": [ "level", "id", "message" ]
    },

    "start": {
      "badge": "▶",
      "labelColor": ["bgYellow", "black"],
      "format": [ "level", "message" ]
    },

    "end": {
      "badge": "■",
      "labelColor": ["bgRed", "black"],
      "format": [ "level", "message" ]
    },

    "info": {
      "badge": "ℹ",
      "labelColor": ["bgBlue", "black"],
      "format": [ "level", "id", "message" ]
    },

    "warn": {
      "badge": "⚠",
      "label": "warning",
      "labelColor": ["bgYellow" , "black"],
      "format": [ "level", "id", "message" ]
    },

    "trace": {
      "badge": "❯",
      "labelColor": ["black", "bgCyan"],
      "format": [ "level", "id", "file-name", "time-diff-init",  "time-diff-scope", "just:-", "scope", "message" ]
    },


    "error": {
      "badge": "✖",
      "labelColor": ["bgRed" , "black"],
      "format": [ "level", "id", "message", "error" ]
    },

    "access": {
      "badge": "",
      "format": [ "access", "id", "access-log" ]
    }
  },

  "components": {
    "id": {
      "color": "grey",
      "displayShortId": 8,
      "displayFormat": "[%s]"
    },

    "file-name": {
      "color": "green",
      "displayFileName": false,
      "displayFormat": "@%s"
    },

    "error": {
      "color": "grey",
      "displayStackTrace": true,
      "displayFullStackTrace": false
    },

    "message": {
      "properties": [ "msg", "message", "text" ]
    },

    "level": {
      "minimumWidth": 12,
      "alignment": "left",
      "underline": false,
      "uppercase": true,
      "displayFormat": "%s"
    },

    "scope": {
      "color": "grey",
      "alignment": "left",
      "displayFormat": "[%s]",
      "uppercase": true,
      "underline": false,
      "italic": false
    },

    "time-diff-init": {
      "defaultReturn": "0ms",
      "color": [ "bold", "magenta" ],
      "minimumWidth": 10,
      "alignment": "right"
    },

    "time-diff-scope": {
      "color": [ "bold", "blue" ],
      "defaultReturn": "0ms",
      "minimumWidth": 8,
      "alignment": "right"
    },

    "access": {
      "minimumWidth": 12,
      "color": [ "bgWhite", "black" ],
      "statusMap": {
        "200-300": { "color": ["bgGreen", "black"], "badge":  "✔" },
        "300-400": { "color": ["bgBlue", "black"], "badge": "←" },
        "400-500": { "badge": "⚠" },
        "500-1000": { "color": ["bgRed", "black"], "badge": "✖" }
      }
    },

    "access-log": {
      "format": ":method :host :path :statusCode :length - :responseTime_ms - :statusMessage"
    }

  }
}
