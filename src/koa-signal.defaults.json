{
  "levels": {
    "start": {
      "badge": "▶",
      "labelColor": "yellow",
      "format": [ "level", "message" ]
    },

    "end": {
      "badge": "■",
      "labelColor": "red",
      "format": [ "level", "message" ]
    },

    "info": {
      "badge": "Ⓘ",
      "labelColor": "blue",
      "format": [ "level", "id", "message" ]
    },

    "trace": {
      "badge": "❯",
      "labelColor": "magenta",
      "format": [ "level", "id", "file-name" , "just:-", "time-diff-init", "scope", "time-diff-scope", "just:-", "message" ]
    },

    "fatal": {
      "badge": "!",
      "labelColor": "red",
      "format": [ "level", "id", "error" ]
    },

    "access": {
      "badge": "",
      "format": [ "access", "id", "access-log" ]
    }
  },

  "components": {
    "id": {
      "color": "grey",
      "displayShortId": 8,
      "displayFormat": "[%s]"
    },

    "file-name": {
      "color": "green",
      "displayFileName": false,
      "displayFormat": "@%s"
    },

    "error": {
      "color": "grey",
      "displayStackTrace": true,
      "displayFullStackTrace": false
    },

    "time-diff-init": {
      "color": [ "bold", "magenta" ],
      "minimumWidth": 10,
      "alignment": "right"
    },

    "message": {
      "properties": [ "msg", "message", "text" ]
    },

    "level": {
      "minimumWidth": 20,
      "alignment": "left",
      "underline": true,
      "uppercase": true,
      "displayFormat": "%s |"
    },

    "scope": {
      "color": "blue",
      "alignment": "left",
      "uppercase": true,
      "underline": false,
      "italic": false
    },
    
    "time-diff-scope": {
      "color": [ "bold", "blue" ],
      "minimumWidth": 8,
      "alignment": "left"
    },

    "access": {
      "minimumWidth": 20,
      "displayFormat": "%s |",
      "underline": true,
      "statusMap": {
        "200-300": { "color": "green", "badge":  "✔" },
        "300-400": {"color": "blue", "badge": "←"},
        "400-500": { "badge": "⚠" },
        "500-1000": {"color": "red", "badge": "✖"}
      }
    },

    "access-log": {
      "format": ":method :host :path :statusCode :length | :responseTime_ms | :statusMessage"
    }
    
  }
}
