{
  "levels": {
    "info": {
      "badge": "Ⓘ",
      "labelColor": "blue",

      "format": [ "id", "level" ]
    },

    "trace": {
      "badge": "❯",
      "labelColor": "magenta",

      "format": [ "id", "level", "file-name"]
    },

    "fatal": {
      "badge": "!",
      "labelColor": "red",

      "format": [ "id", "level", "error" ]
    }
  },

  "components": {
    "id": {
      "color": "grey",
      "displayShortId": 6,
      "displayFormat": "[%s]"
    },

    "file-name": {
      "color": "green",
      "displayFileName": false,
      "displayFormat": "[%s]"
    },

    "level": {

    },

    "error": {
      "color": "grey",
      "displayStackTrace": true,
      "displayFullStackTrace": false
    }
  }
}
