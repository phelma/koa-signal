{
  "levels": {
    "start": {
      "badge": "▶",
      "labelColor": "yellow",
      "format": [ "level", "message" ]
    },

    "info": {
      "badge": "Ⓘ",
      "labelColor": "blue",
      "format": [ "level", "id", "message" ]
    },

    "trace": {
      "badge": "❯",
      "labelColor": "magenta",
      "format": [ "level", "id", "file-name" , "just:-", "time-diff-init", "scope", "time-diff-scope", "just:-", "message" ]
    },

    "fatal": {
      "badge": "!",
      "labelColor": "red",
      "format": [ "level", "id", "error" ]
    }
  },

  "components": {
    "id": {
      "color": "grey",
      "displayShortId": 8,
      "displayFormat": "[%s]"
    },

    "file-name": {
      "color": "green",
      "displayFileName": false,
      "displayFormat": "@%s"
    },

    "error": {
      "color": "grey",
      "displayStackTrace": true,
      "displayFullStackTrace": false
    },

    "time-diff-init": {
      "color": [ "bold", "magenta" ],
      "minimumWidth": 10,
      "alignment": "right"
    },

    "message": {
      "properties": [ "msg", "message", "text" ]
    },

    "level": {
      "minimumWidth": 8,
      "alignment": "left",
      "displayFormat": "%s |"
    },

    "scope": {
      "color": "blue",
      "alignment": "left",
      "upperCase": true,
      "underline": false,
      "italic": false
    },
    
    "time-diff-scope": {
      "color": [ "bold", "blue" ],
      "minimumWidth": 8,
      "alignment": "left"
    }

  }
}
